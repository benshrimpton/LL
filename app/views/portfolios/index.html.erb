<header class="page-header">
  <h1 class="pull-left">Portfolios</h1>
  <%= link_to '+ Add a New Portfolio', new_portfolio_path,:class => "btn btn-primary pull-right"  %>
  <div class="clear"/>
</header>


<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.title %><span><%=  %></span></td>
        <td>
        <% if portfolio.inactive == false %>
        status : active
        <% else %>
        status : inactive
        <% end %>
        </td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Portfolio', new_portfolio_path, class: "btn btn-primary btn-embossed btn-wide" %>
