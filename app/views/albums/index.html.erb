<header class="page-header">
  <h1 class="pull-left">Listing albums</h1>
  <%= link_to '+ Add a New Album', new_album_path,:class => "btn btn-primary pull-right"  %>
  <div class="clear"/>
</header>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created on</th>
      <th>Satus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr <% if album.inactive == true %>class="inactive"<% end %>>
        <td><%= album.title %></td>
         <th><%= album.created_at %></th>
        <td>
        <% if album.inactive == false %>
        Active
        <% else %>
        Inactive
        <% end %>
        </td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Add a New Album', new_album_path,:class => "btn btn-primary"  %>
