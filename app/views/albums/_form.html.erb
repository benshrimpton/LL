<%= form_for(@album) do |f| %>
  <% if @album.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
      <% @album.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
    <div class="col-sm-6">
      <%= f.label :title %>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <div class="col-sm-6">
       <%= f.label :url_key %>
      <%= f.text_field :url_key, :class => "form-control" %>
    </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :inactive %>
    <%= f.check_box :inactive, "data-toggle" => "checkbox" %>
  </div>
  <div class="form-group">
  <select name="album[photo_id]">
  <% @photos.each do |photo| %>
  <option value="<%= photo.id %>"><%= photo.title %><%= photo.id %></option>
  <% end %>
  </option>
  </div>

<div class="form-group">
  <%= f.submit "+ Save Album", :class => "btn btn-primary btn-embossed btn-wide" %>
</div>

<% end %>
