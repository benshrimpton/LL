= form_for @nav do |f|
  - if @nav.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nav.errors.count, "error")} prohibited this nav from being saved:"
      %ul
        - @nav.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
