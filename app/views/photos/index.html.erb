<header class="page-header">
  <h2 class="pull-left">Photos</h2>
  <%= link_to '+ New Photo', new_photo_path,:class => "btn btn-primary pull-right btn-wide btn-embossed" %>
  <div class="clear"/>
</header>

<section class="row">
  <% @photos.each do |photo| %>
    <figure class="col-sm-2">
      <%= image_tag photo.image.url(:thumb) %>
      
      <% if photo.inactive == false %>
      status : active
      <% else %>
      status : inactive
      <% end %>
       
     <figcaption>
      <div class="actions">
        <b><%= photo.title %></b><br>
        <%= link_to 'Show', photo %>
        <%= link_to 'Edit', edit_photo_path(photo) %>
        <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
     </figcaption>
    </figure>
  <% end %>
</section>



