<section class="row">
  <h2>Photos</h2>
  <%= link_to 'New Photo', new_photo_path %>
</section>

<section class="row">
  <% @photos.each do |photo| %>
    <figure class="col-sm-2">
     <%= image_tag photo.image.url(:thumb) %>
     <figcaption>
      <div class="actions">
        <b><%= photo.title %></b>
        <%= link_to 'Show', photo %>
        <%= link_to 'Edit', edit_photo_path(photo) %>
        <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
     </figcaption>
    </figure>
  <% end %>
</section>



